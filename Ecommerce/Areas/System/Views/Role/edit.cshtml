@model Ecommerce.Models.Role;
@{
    ViewData["Title"] = "edit";
    Layout = "~/Areas/System/Views/Layout/Admin.cshtml";
}


<div class="container">
    <div class="page-title">
        <h3>Edit Role</h3>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">All form elements</div>
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <form class="" method="post">
                        <input type="hidden" asp-for="Id"></input>
                        @Html.AntiForgeryToken()
                        <div class="mb-3 row">
                            <label class="col-sm-2">Value</label>
                            <div class="col-sm-10">
                                <input type="text" asp-for="Value" class="form-control" />
                                <span class="text-danger" asp-validation-for="Value"></span>
                            </div>
                        </div>
                        <div class="line"></div>
                        <br />
                        <div class="mb-3 row">
                            <label class="col-sm-2">Title</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Title" />
                                <span class="text-danger" asp-validation-for="Title"></span>

                            </div>
                        </div>
                        <div class="line"></div>
                        <br />
                       
                        <div class="mb-3 row">
                            <div class="col-sm-4 offset-sm-2">
                                <a asp-action="index" class="btn btn-secondary mb-2">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-primary mb-2">
                                    <i class="fas fa-save"></i> Save
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

