@model IEnumerable<Ecommerce.Models.Role>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/System/Views/Layout/Admin.cshtml";
}

<div class="container">
    <div class="page-title">
        <h3>Tables</h3>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <a asp-action="add" class="btn btn-primary">Add role</a>
                </div>
                <div class="card-body">
                    <p class="card-title"></p>
                    <table class="table table-hover"
                           id="dataTables-example"
                           width="100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Value</th>
                                <th>Title</th>
                                <th></th>
                               
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Value</td>
                                    <td>@item.Title</td>
                                  
                                    <td>
                                        <a asp-controller="role" asp-action="edit" asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                                        <a asp-controller="role" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

