@model Ecommerce.ModelsView.Admin.CreateRoleViewModel;
@{
    ViewData["Title"] = "add_role";
    Layout = "~/Areas/System/Views/Layout/Admin.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/dropify/0.6.2/css/dropify.min.css" rel="stylesheet">
<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Vai trò</h4>

                </div>
            </div>

        </div>
        <!-- row -->
        <div class="row">
            <div class="col-xl-12 col-xxl-12">
                <div class="card">

                    <div class="card-body">
                        <form class="" asp-action="add_role" method="post" >
                            @Html.AntiForgeryToken()
                            <div>

                                <section>
                                    <div class="row">
                                        <div class="col-lg-6 mb-4">
                                            <div class="form-group">
                                                <h5><label class="text-label">Tên vai trò</label></h5>
                                                <input type="text" asp-for="NameRole1" class="form-control" />
                                                <span class="text-danger" asp-validation-for="NameRole1"></span>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 mb-4">
                                            <div class="basic-form">
                                                <div class="form-group">
                                                    <div class="form-check mb-2">
                                                        <input type="checkbox" class="form-check-input"
                                                               name="SelectedPermissions" value="AccountManager">
                                                        <label class="form-check-label h6">Account Manager</label>
                                                    </div>
                                                    <div class="form-check mb-2">
                                                        <input type="checkbox" class="form-check-input"
                                                               name="SelectedPermissions" value="ProductManager">
                                                        <label class="form-check-label h6">Categories and products Manager</label>
                                                    </div>
                                                    <span class="text-danger">@Html.ValidationMessage("SelectedPermissions")</span>
