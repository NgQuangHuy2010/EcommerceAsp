@model IEnumerable<Ecommerce.ModelsView.User.ApplicationUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/System/Views/Layout/Admin.cshtml";
}

<link rel="stylesheet" href="http://cdn.bootcss.com/toastr.js/latest/css/toastr.min.css">
<div class="content-body">
    @{
        var errorMessage = TempData["ErrorMessage"] as string;
    }

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            @errorMessage
        </div>
    }
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Hi, welcome !</h4>

                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">

                    <a asp-action="add_category" class="btn btn-rounded btn-info">
                        <span class="btn-icon-left text-info">
                            <i class="fa fa-plus color-info"></i>
                        </span>Tạo mới
                    </a>
                </ol>
            </div>
        </div>


        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Tài khoản</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example" class="display" style="min-width: 845px; color:black;">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Email</th>
                                        <th>Fullname</th>
                                        <th>Phone</th>
                                        <th>Roles</th>
                                        <th></th>
                                    </tr>

                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@user.Id</td>
                                            <td>@user.Email</td>
                                            <td>@user.Fullname</td>
                                            <td>@user.Phone</td>
                                            <td>@string.Join(", ", user.Roles)</td>
                                            <td>
                                                <a @* asp-controller="category" asp-action="edit" asp-route-id="@item.Id" *@ class="btn "> <i class="fa fa-pencil" style="color: green; font-size:13px;"></i></a>
                                                <a @* asp-controller="category" asp-action="delete" asp-route-id="@item.Id" *@ class="btn "><i class="fa fa-trash " style="color: red; font-size:13px;"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script src="http://cdn.bootcss.com/jquery/2.2.4/jquery.min.js"></script>
<script src="http://cdn.bootcss.com/toastr.js/latest/js/toastr.min.js"></script>
{!! Toastr::message() !!}

