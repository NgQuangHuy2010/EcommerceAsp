@model IEnumerable<Ecommerce.Models.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/System/Views/Layout/Admin.cshtml";
}


<link rel="stylesheet" href="http://cdn.bootcss.com/toastr.js/latest/css/toastr.min.css">
<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Hi, welcome !</h4>

                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">

                    <a asp-action="add" class="btn btn-rounded btn-info">
                        <span class="btn-icon-left text-info">
                            <i class="fa fa-plus color-info"></i>
                        </span>Tạo mới sản phẩm
                    </a>
                </ol>
            </div>
        </div>
        <!-- row -->


        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Danh sách sản phẩm</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example" class="display" style="min-width: 845px; color:black;">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tên sản phẩm</th>
                                        <th>Danh mục</th>
                                        <th>Hình ảnh</th>
                                        <th>Giá sản phẩm</th>
                                        <th>Giá giảm</th>
                                        <th>Model</th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>


                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.NameProduct</td>
                                            <td>@(item.IdCategoryNavigation != null ? item.IdCategoryNavigation.Name : "N/A")</td>
                                            <td><img width="70" src="~/imgs/imgProducts/@item.ImageProduct" /></td>
                                            <td>@string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:N0} VNĐ", item.PriceProduct)</td>
                                            <td>@string.Format(new System.Globalization.CultureInfo("vi-VN"), "{0:N0} VNĐ", item.Discount)</td>
                                            <td>@item.Model</td>
                                            <td>@item.Status</td>
                                            <td>
                                                <a asp-controller="product" asp-action="edit" asp-route-id="@item.Id" class="btn "> <i class="fa fa-pencil" style="color: green; font-size:13px;"></i></a>
                                                <a asp-controller="product" asp-action="delete" asp-route-id="@item.Id" class="btn "><i class="fa fa-trash " style="color: red; font-size:13px;"></i></a>

                                            </td>

                                        </tr>
                                    }
                                </tbody>


                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script src="http://cdn.bootcss.com/jquery/2.2.4/jquery.min.js"></script>
<script src="http://cdn.bootcss.com/toastr.js/latest/js/toastr.min.js"></script>
{!! Toastr::message() !!}


