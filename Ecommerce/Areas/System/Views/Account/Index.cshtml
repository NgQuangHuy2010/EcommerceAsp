
@model IEnumerable< Ecommerce.Models.Account>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/System/Views/Layout/Admin.cshtml";
}

<div class="container">
    <div class="page-title">
        <h3>Tables</h3>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <a asp-action="add" class="btn btn-primary">Add Account</a>
                </div>
                <div class="card-body">
                    <p class="card-title"></p>
                    <table class="table table-hover"
                           id="dataTables-example"
                           width="100%">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>DOB</th>
                                <th>Gender</th>
                                <th>Status</th>
                                <th>Action</th>

                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Fullname</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Dob</td>
                                    <td>@item.Gender</td>

                                    <td>@item.Status</td>
                                    <td>
                                        <a asp-controller="account" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                                        <a asp-controller="account" asp-action="delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

