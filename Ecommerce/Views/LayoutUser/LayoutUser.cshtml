    <link rel="icon" type="image/png" sizes="16x16"
    
          href="~/FE/img/Remove-bg.ai_1718535780539.png">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cookie&display=swap"
          rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800;900&display=swap"
          rel="stylesheet" />

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/FE/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="~/FE/css/font-awesome.min.css" type="text/css" />
    <link rel="stylesheet" href="~/FE/css/elegant-icons.css" type="text/css" />
    <link rel="stylesheet" href="~/FE/css/jquery-ui.min.css" type="text/css" />
    <link rel="stylesheet" href="~/FE/css/magnific-popup.css" type="text/css" />
    <link rel="stylesheet" href="~/FE/css/owl.carousel.min.css" type="text/css" />
    <link rel="stylesheet" href="~/FE/css/slicknav.min.css" type="text/css" />
    <link rel="stylesheet" href="~/FE/css/style.css" type="text/css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/~/FE/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/FE/owlcarousel/assets/owl.carousel.min.css" />
    <link rel="stylesheet"
          href="~/FE/owlcarousel/assets/owl.theme.default.min.css" />
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Offcanvas Menu Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        <div class="offcanvas__close">+</div>
        <ul class="offcanvas__widget">
            <li><span class="icon_search search-switch"></span></li>
            <li>
                <a href="#">
                    <span class="icon_heart_alt"></span>
                    <div class="tip">2</div>
                </a>
            </li>
            <li>
                <a href="#">
                    <span class="icon_bag_alt"></span>
                    <div class="tip">2</div>
                </a>
            </li>
        </ul>
        <div class="offcanvas__logo">
            <a href="./index.html"><img src="img/logo.png" alt="" /></a>
        </div>
        <div id="mobile-menu-wrap"></div>
        <div class="offcanvas__auth">
            <a href="#">Login</a>
            <a href="#">Register</a>
        </div>
    </div>
    <!-- Offcanvas Menu End -->
    <!-- Header Section Begin -->
    <header class="header bg-header">
        <div class="container-fluid">
            <div class="row d-flex justify-content-center align-items-center">
                <div class="col-xl-2 col-lg-2">
                    <div class="header__logo">
                        <a asp-action="Index" asp-controller="Home">
                            <img src="~/FE/img/Remove-bg.ai_1718535780539.png" alt="" class="logo_header_img" />
                        </a>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-7">
                    <nav class="header__menu">
                        <form asp-action="SearchProducts" asp-controller="Products" method="get">
                            <div class="input-group">
                                @* HomeViewModel kế thừa từ SearchViewModel để lấy ra thuộc tính SearchProduct từ SearchViewModel *@
                                <input type="text" name="searchProduct" value="@Model.SearchProduct" class="form-control form-control-search" placeholder="Tìm kiếm sản phẩm..." />
                                <div class="input-group-append">
                                    <button class="btn custom-border border-light" type="submit">
                                        <span class="icon_search search-switch"></span>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </nav>
                </div>
                <div class="col-lg-2">
                    <div class="header__right">
                        @using Ecommerce.ModelsView.User
                        @using Microsoft.AspNetCore.Identity
                        @inject SignInManager<ApplicationUser> SignInManager
                        @inject UserManager<ApplicationUser> UserManager
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <!-- Nếu đã đăng nhập -->
                            <div class="header__right__auth">
                                <div class="dropdown">
                                    <a class="d-flex align-items-center justify-content-center" data-toggle="dropdown" style="cursor:pointer;">
                                        <i class="fa fa-user-circle-o pr-2" style="color:white; font-size:30px;"></i>
                                        <span class="text-white">@UserManager.GetUserAsync(User).Result.Fullname</span>
                                    </a>
                                    <div class="dropdown-menu">
                                        <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-link ">Đăng xuất</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <!-- Nếu chưa đăng nhập -->
                            <div class="header__right__auth">
                                <a asp-action="Login" asp-controller="Account" class="d-flex align-items-center justify-content-center">
                                    <i class="fa fa-user-circle-o pr-2" style="color:white; font-size:30px;"></i>
                                    <span>Tài khoản</span>
                                </a>
                            </div>
                        }







                        <ul class="header__right__widget">
                            <li>
                                @* cho phép sử dụng các lớp và giao diện liên quan đến HTTP trong ASP.NET Core, chẳng hạn như HttpContext và ISession *@
                                @using Microsoft.AspNetCore.Http
                                @using Newtonsoft.Json
                                @using Ecommerce.ModelsView
                                @* IHttpContextAccessor cung cấp quyền truy cập vào HttpContext hiện tại bao gồm thông tin về yêu cầu HTTP, phản hồi, và session *@
                                @inject IHttpContextAccessor HttpContextAccessor

                                @functions {
                                    int GetCartItemCount()
                                    {
                                        var cart = HttpContextAccessor?.HttpContext?.Session?.GetString("Cart");
                                        if (cart != null)
                                        {
                                            // Giải tuần tự hóa chuỗi JSON để chuyển đổi chuỗi JSON thành danh sách các đối tượng CartItem
                                            var cartItems = JsonConvert.DeserializeObject<List<CartItem>>(cart);
                                            //nếu cartItem null nếu null trả về 0
                                            return cartItems?.Count ?? 0;
                                        }
                                        return 0; // Return 0 nếu cart trống
                                    }
                                }

                                <a asp-action="Cart" asp-controller="Cart">
                                    <span class="icon_cart_alt"></span>
                                    <div class="tip" id="cartItemCount">@GetCartItemCount()</div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="canvas__open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header Section End -->
    @RenderBody()
    <footer class=" bg-body-tertiary text-center text-lg-start">
        <div class="">
        <!-- Copyright -->
        <div class="text-center p-5" style="background-color: rgba(0, 0, 0, 0.05);">
            © 2024 Ecommerce
            
        </div>
        <!-- Copyright -->
        </div>

    </footer>
    <!-- Footer Section End -->
    <!-- Search End -->
    <!-- Js Plugins -->
    <script src="~/FE/js/jquery-3.3.1.min.js"></script>
    <script src="~/FE/js/bootstrap.min.js"></script>
    <script src="~/FE/js/jquery.magnific-popup.min.js"></script>
    <script src="~/FE/js/jquery-ui.min.js"></script>
    <script src="~/FE/js/mixitup.min.js"></script>
    <script src="~/FE/js/jquery.countdown.min.js"></script>
    <script src="~/FE/js/jquery.slicknav.js"></script>
    <script src="~/FE/js/owl.carousel.min.js"></script>
    <script src="~/FE/js/jquery.nicescroll.min.js"></script>
    <script src="~/FE/js/main.js"></script>
    <!-- <script src="jquery.min.js"></script> -->
    <script src="~/FE/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/FE/js/owlcarousel.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
