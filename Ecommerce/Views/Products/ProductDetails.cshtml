@section Scripts {
    <script>
        $(document).ready(function () {
            $('#addToCart').on('click', function (e) {
                e.preventDefault();
                var productId = @Model.Details.Id;
                var productName = encodeURIComponent('@Html.Raw(Model.Details.NameProduct)');

                var price = @Model.Details.PriceProduct;
                var quantity = $('#quantity').val();

                $.ajax({
                    url: '@Url.Action("AddToCart", "Products")',
                    type: 'POST',
                    data: {
                        productId: productId,
                        productName: productName,
                        price: price,
                        quantity: quantity
                    },
                    success: function (response) {
                        alert('Sản phẩm đã được thêm vào giỏ hàng!');
                    },
                    error: function () {
                        alert('Có lỗi xảy ra khi thêm sản phẩm vào giỏ hàng.');
                    }
                });
            });
        });
    </script>
